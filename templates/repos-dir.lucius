.repos-dir {
    padding:                            1em;

    table {
        width:                          100%;
        background-color:               #{lightBg};
        color:                          #{lightText};
        border:                         solid #{lightBgHigh};    

        tr {
            border:                     1px solid #{lightBgHigh}
        }

        th {
            background-color:           #{darkBg};
            color:                      #{darkText};        
        }

        th, td {
            text-align:                 left;
            padding:                    .5em;
        }

        td.old {
            color:                      #{lightTextLow};
        }
    }

    a.file {
        color:                          #{green};
    }

    a.directory {
        font-weight:                    bold;
        color:                          #{yellow};
    }
}
